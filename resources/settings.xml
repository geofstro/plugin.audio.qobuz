<settings>
   <!-- Credentials -->
   <category label="38000">
   <setting id="username" type="text" label="37000" default=""/>
   <setting id="password" type="text" option="hidden" label="37001" default="" />
   </category>
   <!-- Stream -->
   <category label="38001">
    <setting id="streamtype" label="32000" type="labelenum" values="flac|mp3" default="flac"/>
    <!-- <setting id="skipsample" label="32001" type="bool" defaul="true" /> -->
   </category>
   <!-- Limits -->
   <category label="38002">
   <setting id="search_enabled" label="35000" type="bool" default="true" />
   <setting type="sep" />
   <setting id="songsearchlimit" type="labelenum" label="30002" default="100" values="10|25|50|100|1000" /> -->
   <setting id="albumsearchlimit" type="labelenum" label="30003" default="100" values="10|25|50|100|1000" />
   <setting id="artistsearchlimit" type="labelenum" label="30004" default="100" values="10|25|50|100|1000" /> 
   
   </category>
   <!-- Cache -->
    <category label="31006">
     <setting label="31000" type="text" default="" enable="false"/>
        <setting type="sep" />
        <setting id="cache_duration_album" type="labelenum" label="31001" default="1440" values="0|5|10|30|60|120|240|480|960|1440" />
        <setting id="cache_duration_artist" type="labelenum" label="31002" default="1440" values="0|5|10|30|60|120|240|480|960|1440" />
        <setting id="cache_duration_track" type="labelenum" label="31003" default="1440" values="0|5|10|30|60|120|240|480|960|1440" />
        <setting id="cache_duration_recommendation" type="labelenum" label="31004" default="1440" values="0|5|10|30|60|120|240|480|960|1440" />
        <setting id="cache_duration_userplaylist" type="labelenum" label="31005" default="60" values="0|5|10|30|60|120|240|480|960|1440" />
        <setting id="cache_duration_auth" type="labelenum" label="31008" default="60" values="0|5|10|30|60|120|240|480|960|1440" />
   </category>
   <!-- Notification -->
   <!-- <category label="36002">
        
   </category>-->
         
   <!-- Colors -->
   <category label="33101">
        <setting id="color_item" label="33102" type="text" default="FF59A9C5" />
        <setting id="color_item_caution" label="33103" type="text" default="FFFF0000" />
        <setting id="color_item_playlist" label="33104" type="text" default="FFFFFFFF" />
        
   </category>       
   <!-- Other -->
   <category label="38003">
        <setting id="notification_playingsong" label="36003" type="bool" default="false" />
        <setting id="show_recommendations" label="38004" type="bool" default="true" />
        <setting id="enable_scan_feature" label="38005" type="bool" default="false" />
        <!-- <setting id="resolver_enabled" label="33000" type="bool" default="true" /> -->
        <setting id="debug" label="Debug" type="bool" default="false" />
    	<setting id="userplaylists_display_cover" label="(i8n) Playlist - show cover" type="bool" default="true"/>
   </category>   	
	<setting id="warn_free_account" type="bool" default="true" option="hidden"/>
</settings>
