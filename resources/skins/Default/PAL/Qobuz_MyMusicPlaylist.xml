<window id="500">
    <defaultcontrol always="true">301</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <views>50,51,506</views>
    <posx>0</posx>
    <posy>0</posy>
    <controls>
        <include>CommonMusicBackground</include>
        <include>CommonMediaPlayingBackground</include>
        <include>ContentPanelBackgrounds</include>
        <control type="group">
                      <control type="scrollbar" id="300">
                <description>My first scroll bar control</description>
                <posx>80</posx>
                <posy>60</posy>
                <width>500</width>
                <height>200</height>
                <visible>true</visible>
                <texturesliderbackground>scroll-background.png
                </texturesliderbackground>
                <texturesliderbar>bar.png</texturesliderbar>
                <texturesliderbarfocus>bar-focus.png</texturesliderbarfocus>
                <textureslidernib>nib.png</textureslidernib>
                <textureslidernibfocus>nib-focus.png</textureslidernibfocus>
                <pulseonselect></pulseonselect>
                <orientation>vertical</orientation>
                <showonepage>true</showonepage>
                <onup>2</onup>
                <ondown>3</ondown>
                <onleft>1</onleft>
                <onright>1</onright>
            </control>
            <control type="list" id="301">
                <description>My first list container</description>
                <posx>270</posx>
                <posy>100</posy>
                <width>250</width>
                <height>400</height>
                <visible>true</visible>
                <onup>2</onup>
                <ondown>3</ondown>
                <onleft>1</onleft>
                <onright>1</onright>
                <!-- <viewtype label="3D list">list</viewtype> -->
                <orientation>vertical</orientation>
                <pagecontrol>25</pagecontrol>
                <scrolltime tween="sine" easing="out">200</scrolltime>
                <itemlayout width="250" height="29">
                    <control type="label">
                        <posx>30</posx>
                        <posy>3</posy>
                        <width>430</width>
                        <height>22</height>
                        <font>font13</font>
                        <aligny>center</aligny>
                        <selectedcolor>white</selectedcolor>
                        <align>left</align>
                        <label>$INFO[ListItem.Label]</label>
                        <!-- <info>ListItem.Label</info> -->
                    </control>
                </itemlayout>
                <focusedlayout height="30" width="250">
                    <control type="label">
                        <posx>30</posx>
                        <posy>3</posy>
                        <width>430</width>
                        <height>22</height>
                        <font>font14</font>
                        <aligny>center</aligny>
                        <selectedcolor>green</selectedcolor>
                        <shadowcolor>FF000000</shadowcolor>
                        <texturefocus>myfocustexture.png</texturefocus>
                        <texturenofocus>mynormaltexture.png</texturenofocus>
                        <align>left</align>
                        <label>[B]$INFO[ListItem.Label][/B]</label>
                    </control>
                    <control type="button" id="302">
                        <description>My first button control</description>
                        <posx>180</posx>
                        <posy>3</posy>
                        <width>250</width>
                        <height>200</height>
                        <visible>true</visible>
                        <colordiffuse>FFFFFFFF</colordiffuse>
                        <texturefocus>myfocustexture.png</texturefocus>
                        <texturenofocus>mynormaltexture.png</texturenofocus>
                        <label>29</label>
                        <font>font12</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <disabledcolor>80FFFFFF</disabledcolor>
                        <align>right</align>
                        <aligny></aligny>
                        <textoffsetx></textoffsetx>
                        <textoffsety></textoffsety>
                        <pulseonselect></pulseonselect>
                        <onclick>XBMC.ActivateWindow(MyVideos)</onclick>
                        <onfocus>-</onfocus>
                        <onup>2</onup>
                        <ondown>3</ondown>
                        <onleft>1</onleft>
                        <onright>1</onright>
                    </control>
                </focusedlayout>
            </control>
<!--             <include>Window_OpenClose_Animation</include>       
            <include>CommonRootView</include> view id = 50
            <include>FullWidthList</include> view id = 51
            <include>MusicInfoListView</include> view id = 506 -->
            
        </control>
        <include>CommonPageCount</include>
        <include>CommonNowPlaying</include>
        <include>BehindDialogFadeOut</include>
        <include>ScrollOffsetLabel</include>
  <control type="group">
            <posx>60</posx>
            <posy>0</posy>
            <animation effect="slide" end="-360,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
            <animation effect="slide" start="-360,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>300</width>
                <height>35</height>
                <texture border="0,0,32,0">header.png</texture>
            </control>
            <control type="label">
                <include>WindowTitleCommons</include>
                <posx>270</posx>
                <label>$LOCALIZE[10517]</label>
            </control>

        </control>
        <include>WindowTitleHomeButton</include>
        <include>Clock</include>
    </controls>
</window>
